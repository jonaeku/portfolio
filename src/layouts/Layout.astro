---
import "../styles/global.css";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="flex mt-5 mx-5 items-center">
			<div class="flex">
				<a href="/#hello" class="z-10"
					><img
						class="h-10 fixed hover:scale-110 hover:cursor-pointer"
						src="/Logo.svg"
						alt="Logo"
					/>
				</a>
				<!-- <img class="h-10 ml-8" src="/ionaeLogo.png" alt="Logo" /> -->
				<div class="h-10 ml-8 flex items-center">
					<h1 class="text-2xl">JONAKUHN</h1>
				</div>
			</div>

			<div
				class="hidden lg:flex fixed left-1/2 -translate-x-1/2 bg-white rounded-full shadow-own z-10"
			>
				<nav class="flex w-[500px] h-10 items-center justify-evenly">
					<a class="hidden lg:flex" href="/#hello">Home</a>
					<a class="hidden lg:flex" href="/Projects">Projekte</a>
					<a class="hidden lg:flex" href="/#kontakt">Kontakt</a>
				</nav>
			</div>

			<div
				class="hidden lg:flex h-10 mr-5 ml-auto items-center flex-row gap-3"
			>
				<a href="https://github.com/jonaeku"
					><img class="h-7" src="github.png" alt="github" />
				</a>
				<a href="https://www.linkedin.com/in/jona-kuhn-673050239/"
					><img class="h-7" src="linkedin.png" alt="linkedin" />
				</a>
			</div>
		</div>

		<input class="side-menu" type="checkbox" id="side-menu" />
		<label class="hamb" for="side-menu"
			><span class="hamb-line z-50"></span>
		</label>
		<nav class="nav">
			<ul class="menu font-head text-xl">
				<li>
					<a href="/#hello" onclick="closeMenu()">Home</a>
				</li>
				<li>
					<a href="/Projects" onclick="closeMenu()" rel="prefetch">Projekte</a>
				</li>
				<li>
					<a href="/#kontakt" onclick="closeMenu()">Kontakt</a>
				</li>
				<li>
					<div
						class="flex lg:hidden h-10 mt-[20%] ml-auto items-center flex-row"
					>
						<a href="https://github.com/jonaeku"
							><img class="h-7" src="github.png" alt="github" />
						</a>
						<a
							href="https://www.linkedin.com/in/jona-kuhn-673050239/"
							><img
								class="h-7"
								src="linkedin.png"
								alt="linkedin"
							/>
						</a>
					</div>
				</li>
			</ul>
		</nav>

		<main class="mx-[5%] lg:ml-[15%] lg:mr-[15%] scroll-mt-20">
			<slot />
		</main>

		<footer
			class="flex w-screen h-16 flex-col items-center justify-center mt-5 gap-1"
		>
			<p>Made with ❤️ & Astro</p>
			<a href="Impressum">Impressum & Datenschutz</a>
		</footer>

		<script is:inline>
			function closeMenu() {
				const checkbox = document.getElementById("side-menu");
				checkbox.checked = !checkbox.checked;
			}
		</script>
		<style is:global>
			html {
				font-family: "Lexend Deca", sans-serif;
				scroll-behavior: smooth;
			}
			.shadow-own {
				box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px,
					rgba(17, 17, 26, 0.05) 0px 8px 32px;
			}
			:global(html) {
				scroll-behavior: smooth;
			}
			body {
				background-image: radial-gradient(
					circle at 50% 2000px,
					#3788aa7f 30%,
					#3788aa7f 45%,
					#3788aa7f 50%,
					#ffffff 100%
				);
			}
		</style>
	</body>
</html>
